    rsync --remove-source-files -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$fb1/" "$HOME/Pictures"
    rsync --remove-source-files -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
