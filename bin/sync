#!/bin/bash

# Sync VidHop data from phone to workstation using rsync and vice versa.
# These functions are intended to be used on the workstation.
# Don't forget to start sshd on the phone.
# Allow SSH through your firewall in case of permission errors.

sync_help() {
  echo " Title: sync"
  echo " Description: Sync files between phone and workstation."
  echo " Commands:"
  echo "   syncvidhop  => fetch VidHop files from phone to workstation and send files from workstation to phone"
  echo "               => syncvidhop executes sendvidhop and fetchvidhop"
  echo "   sendvidhop  => send files from workstation to phone"
  echo "   fetchvidhop => fetch VidHop files from phone to workstation"
  echo " Prerequisites:"
  echo "   1. the IP-address and user have to be known in the 'sync' file, optionally via config.ini"
  echo "   2. passwordless public SSH keys should be configured on phone and workstation (or you'll have to type passwords)"
  echo "   3. start sshd on the phone, in Termux, with command 'sshd'"
  echo " Scenario:"
  echo "   Execute 'syncvidhop' on laptop."
  echo "   The command will pull in files from the phone onto the laptop, and send metadata files to the phone"
  echo " Notes:"
  echo "   sendvidhop sends all VidHop files, keeps the metadata files and deletes media files to not clog up the phone"
  echo "   fetchvidhop fetches only metadata files to enable video searches in Termux via the fvid command"
  echo " Troubleshoot:"
  echo "   No permissions error was solved by disabling the firewall on the workstation."
}

# PHONE
# -----
VIDHOP_DIR_PHONE="/data/data/com.termux/files/home/storage/shared/VidHop"
VIDHOP_APP_DIR_PHONE="/data/data/com.termux/files/usr/opt/vidhop"
TERMUX_RC_PHONE="/data/data/com.termux/files/usr/etc/bash.bashrc"
SSH_PORT_TERMUX=8022

# WORKSTATION
# -----------
VIDHOP_DIR_WS="$HOME/Videos/VidHop"
SSH_PRIVATE_KEY_WS="$HOME/.ssh/id_vidhop"

sshphone() {
  [ -n "$1" ] && local IP_PHONE="$1"
  ssh -4 -p 8022 -i "$SSH_PRIVATE_KEY_WS" "$USER_PHONE@$IP_PHONE"
}

# sendvidhop
real_sendvidhop() {
  echo -e ">> SENDING METADATA (JSON files)$([ "$1" = "--delete" ] && echo " and DELETE JSON FILES on phone that don't exist on workstation")..."
  rsync -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
    --exclude=".git/" \
    --exclude=".gitignore" \
    --exclude=".idea/" \
    --exclude="bin/" \
    --exclude="log/" \
    --exclude="import/" \
    --exclude="export/" \
    --exclude="website/" \
    --include="*/" \
    --include="*.json" \
    --exclude="*" \
    "$VIDHOP_DIR_WS/" "$USER_PHONE@$IP_PHONE:$VIDHOP_DIR_PHONE""$([ "$1" = "--delete" ] && echo " --delete")"
}

dry_sendvidhop() {
  echo -e ">> SENDING METADATA (JSON files)..."
  rsync -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
    --exclude=".git/" \
    --exclude=".gitignore" \
    --exclude=".idea/" \
    --exclude="bin/" \
    --exclude="log/" \
    --exclude="import/" \
    --exclude="export/" \
    --exclude="website/" \
    --include="*/" \
    --include="*.json" \
    --exclude="*" \
    "$VIDHOP_DIR_WS/" "$USER_PHONE@$IP_PHONE:$VIDHOP_DIR_PHONE"
}

# sync media files
# ----------------
sendvidhop() {
  unset answer
  if [ "$1" = "-exec" ]; then
    real_sendvidhop
  elif [ "$1" = "--delete" ]; then
    real_sendvidhop "--delete"
  else
    dry_sendvidhop
    echo "---"
    echo "this was a dry run"
    echo "execute 'sendvidhop -exec' to do a real run?"
    echo -n "Do real run now? Y/n: " && read -r answer
    # Ask for real run and do it if yes.
    answer=$(echo "$answer" | tr '[:upper:]' '[:lower:]')
    [ "$answer" = "n" ] && return
    [ "$answer" = "y" ] || [ -z "$answer" ] && sendvidhop -exec
  fi
}

# fetchvidhop
real_fetchvidhop() {
  echo -e ">> FETCHING METADATA (JSON files)..."
  rsync -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
    --include="*/" \
    --include="*.json" \
    --exclude="*" \
    "$USER_PHONE@$IP_PHONE:$VIDHOP_DIR_PHONE/metadata/" "$VIDHOP_DIR_WS/metadata"

  echo -e "\n" && echo ">> FETCHING MEDIA files and delete from phone..."
  rsync -Pauv --remove-source-files -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
    --exclude=".git/" \
    --exclude=".gitignore" \
    --exclude="metadata/.nomedia" \
    --exclude="bin/" \
    --exclude="log/" \
    --exclude="import/" \
    --exclude="export/" \
    --exclude="uploads/" \
    --include="*/" \
    --include="*.jpg" \
    --include="*.jpeg" \
    --include="*.png" \
    --include="*.webp" \
    --exclude="*.json" \
    --include="*.mp4" \
    --include="*.webm" \
    --include="*.mp3" \
    --include="*.m4a" \
    --include="*.txt" \
    --include="*.md" \
    "$USER_PHONE@$IP_PHONE:$VIDHOP_DIR_PHONE/" "$VIDHOP_DIR_WS"
}

dry_fetchvidhop() {
  echo -e ">> FETCHING METADATA (JSON files)..."
  rsync -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
    --include="*/" \
    --include="*.json" \
    --exclude="*" \
    "$USER_PHONE@$IP_PHONE:$VIDHOP_DIR_PHONE/metadata/" "$VIDHOP_DIR_WS/metadata"

  echo -e "\n" && echo ">> FETCHING MEDIA files and delete from phone..."
  rsync -Pauvn --remove-source-files -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
    --exclude=".git/" \
    --exclude=".gitignore" \
    --exclude="metadata/.nomedia" \
    --exclude="bin/" \
    --exclude="log/" \
    --exclude="import/" \
    --exclude="export/" \
    --exclude="uploads/" \
    --include="*/" \
    --include="*.jpg" \
    --include="*.jpeg" \
    --include="*.png" \
    --include="*.webp" \
    --exclude="*.json" \
    --include="*.mp4" \
    --include="*.webm" \
    --include="*.mp3" \
    --include="*.m4a" \
    --include="*.txt" \
    --include="*.md" \
    "$USER_PHONE@$IP_PHONE:$VIDHOP_DIR_PHONE/" "$VIDHOP_DIR_WS"
}

# Termux doesn't support creating files with names containing colons, backslash and who knows what else.
# For files with such names, rsync will not work.
fetchvidhop() {
  unset answer
  if [ "$1" = "-exec" ]; then
    real_fetchvidhop
  else
    dry_fetchvidhop

    echo "---"
    echo "this was a dry run"
    echo "execute 'fetchvidhop -exec' to do a real run?"
    echo -n "Do real run now? Y/n: " && read -r answer
    answer=$(echo "$answer" | tr '[:upper:]' '[:lower:]')
    [ "$answer" = "n" ] && return
    [ "$answer" = "y" ] || [ -z "$answer" ] && fetchvidhop -exec
  fi
}

# shellcheck disable=SC2120
syncvidhop() {
  [ "$1" = "-d" ] || [ "$1" = "--dry" ] && # dry run
    echo -e "\n> FETCHING vidhop files DRY RUN..." && dry_fetchvidhop &&
    echo -e "\n> SENDING vidhop files DRY RUN..." && dry_sendvidhop &&
    syncvidhop && return

  echo -e "\n> FETCHING vidhop files..." && fetchvidhop -exec &&
    echo -e "\n> SENDING vidhop files..." && sendvidhop -exec
}

sendvidhopbin() {
  rsync -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
    --exclude=".git/" \
    --exclude=".gitignore" \
    --exclude=".idea/" \
    --exclude="bash.bashrc" \
    "$VIDHOP_DEV_DIR_WS/"* "$USER_PHONE@$IP_PHONE:$VIDHOP_APP_DIR_PHONE"
}

fetchvidhopbin() {
  rsync -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
    --exclude=".git/" \
    --exclude=".gitignore" \
    --exclude=".idea/" \
    "$USER_PHONE@$IP_PHONE:$VIDHOP_APP_DIR_PHONE"/* "$VIDHOP_DEV_DIR_WS"
}

# sync downloaded files
# ---------------------

# android dirs
shared="/data/data/com.termux/files/home/storage/shared"
## media directories
dl="$shared/Download"
docs="$shared/Documents"
pictures="$shared/Pictures"
movies="$shared/Movies"
screenshots="$pictures/Screenshots"
fb1="$pictures/Facebook"
fb2="$shared/DCIM/Facebook"
messenger="$pictures/Messenger"
twitter="$pictures/Twitter"
## telegram
#audio_telegram="$shared/Music/Telegram" # not sure
download_telegram="$shared/Download/Telegram"
movies_telegram="$movies/Telegram"
pictures_telegram="$pictures/Telegram"
# mov media directories
youcut="$shared/Movies/youcut"
screen_rec="$shared/Movies/Screen Recorder"

# Telegram Desktop can be set in config.ini
[ -z "$documents_telegram_ws" ] && documents_telegram_ws="$HOME/Telegram Desktop"
[ -z "$movies_telegram_ws" ] && movies_telegram_ws="$HOME/Telegram Desktop"
[ -z "$pictures_telegram_ws" ] && pictures_telegram_ws="$HOME/Telegram Desktop"

# file extensions
doc_exts=(doc docx xls xlsx pdf txt md DOC DOCX XLS XLSX PDF TXT MD)
img_exts=(jpg png webp jpeg JPG PNG WEBP JPEG)
audio_exts=(mp3 m4a wav flacc aac MP3 M4A WAV FLACC AAC)
mov_exts=(mp4 webm mkv mov avi MP4 WEBM MKV MOV AVI)

real_fetchdownloads() {
  for ext in "${audio_exts[@]}"; do
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$dl/" "$HOME/Music"
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$dl/" "$audio_telegram_ws"
#    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
#      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$audio_telegram/" "$audio_telegram_ws" # not sure
  done

  for ext in "${doc_exts[@]}"; do
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$dl/" "$HOME/Documents"
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$docs/" "$HOME/Documents"
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$documents_telegram/" "$documents_telegram_ws"
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$download_telegram/" "$documents_telegram_ws"
  done

  for ext in "${img_exts[@]}"; do
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*/" "$USER_PHONE@$IP_PHONE:$pictures/" "$HOME/Pictures"
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$dl/" "$HOME/Pictures"
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$screenshots/" "$HOME/Pictures"
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$fb2/" "$HOME/Pictures"
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$fb1/" "$HOME/Pictures"
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$messenger/" "$HOME/Pictures"
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$twitter/" "$HOME/Pictures"
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$pictures_telegram/" "$pictures_telegram_ws"
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$download_telegram/" "$pictures_telegram_ws"
  done

  for ext in "${mov_exts[@]}"; do
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$dl/" "$HOME/Videos"
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$youcut/" "$HOME/Videos"
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$screen_rec/" "$HOME/Videos"
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$screenshots/" "$HOME/Videos"
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$movies_telegram/" "$videos_telegram_ws"
    rsync --remove-source-files -Pauv -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$download_telegram/" "$videos_telegram_ws"
  done
}

dry_fetchdownloads() {
  for ext in "${audio_exts[@]}"; do
    rsync --remove-source-files -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$dl/" "$HOME/Music"
    rsync --remove-source-files -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$dl/" "$audio_telegram_ws"
#    rsync --remove-source-files -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
#      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$audio_telegram/" "$audio_telegram_ws" # not sure
  done

  for ext in "${doc_exts[@]}"; do
    rsync --remove-source-files -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$dl/" "$HOME/Documents"
    rsync --remove-source-files -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$docs/" "$HOME/Documents"
    rsync --remove-source-files -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$documents_telegram/" "$documents_telegram_ws"
    rsync --remove-source-files -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$download_telegram/" "$documents_telegram_ws"
  done

  for ext in "${img_exts[@]}"; do
    rsync --remove-source-files -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*/" "$USER_PHONE@$IP_PHONE:$pictures/" "$HOME/Pictures"
    rsync --remove-source-files -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$dl/" "$HOME/Pictures"
    rsync --remove-source-files -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$screenshots/" "$HOME/Pictures"
