  done

  for ext in "${mov_exts[@]}"; do
    rsync --remove-source-files -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$dl/" "$HOME/Videos"
    rsync --remove-source-files -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$youcut/" "$HOME/Videos"
    rsync --remove-source-files -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$screen_rec/" "$HOME/Videos"
    rsync --remove-source-files -Pauvn -e "ssh -p $SSH_PORT_TERMUX -i $SSH_PRIVATE_KEY_WS" \
      --include="*.$ext" --exclude="*" --exclude=".trashed*" "$USER_PHONE@$IP_PHONE:$screenshots/" "$HOME/Videos"
